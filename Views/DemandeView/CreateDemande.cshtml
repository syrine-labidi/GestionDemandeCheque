@model demandes

@{
    ViewData["Title"] = "ajouter une demande";
}
<div class="card text-center">
  <div class="card-header text-white bg-primary mb-3">
    <h5>Création d'une nouvelle demande de chèque</h5>
  </div>
    <div class="card-body">
      <div style="text-align:left;"> 
      <h5 class="card-title"> Entrer les informations nécessaires : </h5>
      </div>
        <form>
          <div style="text-align:left;">
          <br/>
          
          <!-- Text input -->
          <div class="form-group">
