          </div>
          
          <!-- Text input -->
          <div class="form-group">
            <label class="form-outline mb-4"> Numéro de la demande : </label> <input type="text">
          </div>
          
          <!-- Pièce jointe mail demande -->
          <div class="form-group">
            <label for="exampleFormControlFile1"> E-mail en pièce jointe : </label>
            <input type="file" class="form-control-file" id="exampleFormControlFile1">
          </div>

          </div>
          </div>
           <br />
          <!-- Submit button -->
          <div style="text-align:right;"> 
          <button type="submit" class="btn btn-primary btn-lg btn-block" >   Valider  </button>
          </div>
        </form>
    </div>
</div>


