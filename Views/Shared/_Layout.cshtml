<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GchequeWebApp</title>

    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css"  rel ="stylesheet"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GchequeWebApp.styles.css" asp-append-version="true" />
</head>
<body>
  <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    
                     <img src="~/images/SIBTEL.png" width="130" height="70" class="d-inline-block align-top" alt="">
                    
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                   <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="dropdown-toggle"  id="navbarDropdown" role="button" >
                              Gestion demande de chèque
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index"> Accueil </a>
                                <a class="dropdown-item" asp-area="" asp-controller="Demande" asp-action="CreateDemande"> Ajouter une demande </a>
                                <a class="dropdown-item" asp-area="" asp-controller="Demande" asp-action="ConsulterDemande"> Consulter une demande </a>
                                  
                              <div class="dropdown-divider"></div>
                              <a class="dropdown-item" href="#">Paramètre</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="DemandeController" asp-action="CreateDemande"> Ajouter une demande </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="DemandeController" asp-action="RechercherDemande"> Rechercher une demande </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="DemandeController" asp-action="ConsulterDemande"> Consulter une demande </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="ChequeController" asp-action="DetailCheque"> Saisie une demande </a>
                        </li>

                    </ul>
                    <div style="text-align:left;"> 
                          <button type="submit" class="btn btn-primary btn-lg btn-block" >   Déconnexion  </button>
                    </div>
                </div>
            </div>
        </nav>






    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - GchequeWebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
